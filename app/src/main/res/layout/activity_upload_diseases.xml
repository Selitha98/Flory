<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical"
    tools:context=".UploadDiseases">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_main"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Data"
                android:textAlignment="center"
                android:textColor="@color/green_primary"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/uploadImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/upload_bg" />

            <EditText
                android:id="@+id/uploadTopic"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_main"
                android:gravity="start|center_vertical"
                android:textColorHint="#808080"
                android:hint="Enter Diseases Title"
                android:padding="16dp"
                android:textColor="@color/green_primary" />

            <EditText
                android:id="@+id/diseases_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_main"
                android:textColorHint="#808080"
                android:gravity="start|center_vertical"
                android:hint="Enter Diseases Description"
                android:padding="16dp"
                android:textColor="@color/green_primary"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:scrollbars="vertical" />

            <EditText
                android:id="@+id/treatements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_main"
                android:gravity="start|center_vertical"
                android:hint="Enter Treatements"
                android:textColorHint="#808080"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:padding="16dp"
                android:textColor="@color/green_primary" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:textColorHint="#808080"
                android:textSize="18sp"
                android:text="Save"
                app:cornerRadius="20dp"
                android:gravity="center"
                android:background="@drawable/background_parimary"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>